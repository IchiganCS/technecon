@model Opus

<div class="picturelink">
    <a asp-page="/Opus" asp-route-id="@Model.ID">
        @if (Model.Kind == Opus.Type.Painting) {
            <img src="@Model.HtmlPaintingPath" alt="@Model.Title"/>
        }
        <h1>@Model.Title</h1>
        <h2>@Model.KindString</h2>
        <h3>@Model.Creator.CommonName</h3>
    </a>
</div>